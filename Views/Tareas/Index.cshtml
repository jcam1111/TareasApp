@model IEnumerable<TareasApp.Models.Tarea>

@{
    ViewData["Title"] = "Mis Tareas";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha de Vencimiento</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.Titulo</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.FechaVencimiento.ToShortDateString()</td>
                <td>@tarea.EstadoTarea.Descripcion</td>
                <td>
                    <a href="@Url.Action("Editar", "Tareas", new { id = tarea.TareaID })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Eliminar", "Tareas", new { id = tarea.TareaID })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
